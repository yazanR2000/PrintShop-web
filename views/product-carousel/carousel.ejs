<div class="col-xs-12 col-md-6 product-images" style="margin: auto;">
    <% if(product.length> 1){%>
        <div id="product-images" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <% for(var i=0;i < product.length ; i++){%>
                    <% if(i===0){%>
                        <li data-target="#product-images" data-slide-to="<%=i%>" class="active">
                        </li>
                        <%}else{%>
                            <li data-target="#product-images" data-slide-to="<%=i%>">
                            </li>
                            <%}%>
                                <%}%>
            </ol>
            <div class="carousel-inner">
                <% for(var i=0;i < product.length ;i++){%>
                    <% if(i===0){%>
                        <div class="carousel-item active">
                            <img src="data:product[i]/<%=product[i].img.contentType%>;base64,<%=product[i].img.data.toString('base64')%>"
                                alt="" class="d-block w-100">
                        </div>
                        <%}else{%>
                            <div class="carousel-item">
                                <img src="data:product[i]/<%=product[i].img.contentType%>;base64,<%=product[i].img.data.toString('base64')%>"
                                    alt="" class="d-block w-100">
                            </div>
                        <%}%>
                <%}%>
            </div>
            <a class="carousel-control-prev" href="#product-images" role="button"
                data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#product-images" role="button"
                data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <%}else{%>
            <img src="data:product[0]/<%=product[0].img.contentType%>;base64,<%=product[0].img.data.toString('base64')%>"
                alt="" class="d-block w-100">
            <%}%>
</div>